<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_contact_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"/>
    <TextView
        android:id="@+id/tv_contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@+id/iv_contact_head"
        app:layout_constraintBottom_toTopOf="@id/iv_call_type"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_contact_head"
        app:layout_constraintHorizontal_bias="0.1"/>
    <ImageView
        android:id="@+id/iv_call_type"
        android:layout_width="10sp"
        android:layout_height="10sp"
        app:layout_constraintTop_toBottomOf="@id/tv_contact_name"
        app:layout_constraintBottom_toBottomOf="@id/iv_contact_head"
        app:layout_constraintLeft_toRightOf="@id/iv_contact_head"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.1"/>
    <TextView
        android:id="@+id/tv_call_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="#9C9C9C"
        app:layout_constraintLeft_toRightOf="@id/iv_call_type"
        app:layout_constraintTop_toTopOf="@id/iv_call_type"
        app:layout_constraintBottom_toBottomOf="@id/iv_call_type"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.01"/>
    <TextView
        android:id="@+id/tv_call_times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="#9C9C9C"
        app:layout_constraintTop_toTopOf="@id/iv_call_type"
        app:layout_constraintBottom_toBottomOf="@id/iv_call_type"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_call_time"
        app:layout_constraintHorizontal_bias="0.9"/>
</android.support.constraint.ConstraintLayout>
